<div id="storehours-modal" class="modal fade edit-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Editing Hours of Operation</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="geninfo" action="/admin/settings" method="post">
                    <fieldset>
                        <h2 class="w-100">Hours of Operation</h2>
                        <form id="geninfo" action="/admin/settings" method="post">
                            <div class="form-group">
                                {{#each settings.restaurant_hour.list}}
                                <div class="form-row m-3">
                                    <div class="form-check col input-group">
                                        <input class="form-check-input" type="checkbox" value="{{this.id}}" id="day_name" name="day_name" {{#if this.isActive}}checked{{/if}}>
                                        <label class="form-check-label">
                                            {{this.day_name}}
                                        </label>
                                    </div>
                                    <div class="form-check col input-group">
                                        <input type="text" class="form-control" name="daystart_{{this.id}}" id="daystart_{{this.id}}" value="{{#if this.start_time}}{{this.start_time}}{{/if}}"
                                        />
                                    </div>
                                    -
                                    <div class="form-check col input-group">
                                        <input type="text" class="form-control" name="dayend_{{this.id}}" id="dayend_{{this.id}}" value="{{#if this.end_time}}{{this.end_time}}{{/if}}"
                                        />
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-warning">Save Changes</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </form>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>