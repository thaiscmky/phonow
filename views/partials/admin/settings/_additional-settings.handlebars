    <fieldset class="card card-body edit-mode">
        <h3 class="w-100">Hours of Operation
            <span class="float-right"><button type="reset" class="btn">Cancel</button><button type="submit" class="btn btn-warning">Save</button></span>
        </h3>
        <form id="geninfo" action="/admin/settings" method="post">
            <div class="form-group">
            {{#each settings.additional}}
                {{#each this}}
                    <div class="form-row m-3">
                        <div class="form-check col input-group">
                          <input class="form-check-input" type="checkbox" value="{{this.id}}" id="day_name" name="day_name">
                          <label class="form-check-label">
                            {{this.label}}
                          </label>
                        </div>
                    </div>
                {{/each}}
            {{/each}}
            </div>
        </form>
    </fieldset>
    <h2>Switch example</h2>
    <label class="switch">
      <input type="checkbox">
      <span class="slider"></span>
    </label>
