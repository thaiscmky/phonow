<div class="row my-4 mx-0 grid" id="menu_items">
    <div class="col">
    <form id="edititems" action="/api/newcategory" method="post">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-inverse">
                <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {{!-- TODO add form field visibility to manipulated via on-click events --}}
                {{#if settings.menuitem.list}}
                    {{#each settings.menuitem.list}}
                        {{debug this}}
                         <tr class="edit-mode" id="edit-mitem-{{this.id}}">
                             <td colspan="8">
                                 <div class="form-row">
                                     <div class="id">
                                         <p>{{this.id}}</p>
                                         <input id="item_id" name="item_id" type="hidden" value="{{this.id}}">
                                     </div>
                                     <div class="col name">
                                         <div class="row">
                                             <div class="col">
                                                 <input type="text" class="form-control" name="item_name-{{this.id}}" id="item_name-{{this.id}}" value="{{this.item_name_english}}"/>
                                             </div>
                                         </div>
                                         <div class="row">
                                             <div class="col">
                                                 <input type="text" class="form-control" name="item_name_viet-{{this.id}}" id="item_name_viet-{{this.id}}" value="{{this.item_name_vietnamese}}"/>
                                             </div>
                                         </div>
                                     </div>
                                     <div class="col-2">
                                         <div class="row">
                                             <div class="input-group price col">
                                                 <input type="text" class="form-control" name="item_price-{{this.id}}" id="item_price-{{this.id}}" value="{{this.item_price}}"/>
                                             </div>
                                         </div>
                                         <div class="row">
                                             <div class="col input-group status my-2">
                                                 <span class="caption mr-2">Enabled</span>
                                                 <label class="form-check-label switch">
                                                     <input class="form-check-input" type="checkbox" value="{{this.isActive}}" id="status-" name="status-{{this.id}}" {{#if this.isActive}}checked{{/if}}>
                                                     <span class="slider"></span>
                                                 </label>
                                             </div>
                                         </div>
                                     </div>
                                     <div class="col-3 input-group category">
                                         <select class="form-control" id="item_category">
                                             {{#unless this.isActive}}<option value="">Select..</option>{{/unless}}
                                             <option value="">{{this.item_category}}</option>
                                             <option>3</option>
                                             <option>4</option>
                                             <option>5</option>
                                         </select>
                                     </div>
                                 </div>
                                 <div class="form-row">
                                     <div class="col input-group description">
                                         <textarea class="form-control" name="item_description-" id="item_description-{{this.id}}">{{this.item_description}}</textarea>
                                     </div>
                                     <div class="col-3 pr-0">
                                         <div class="row">
                                             <div class="col">
                                                 <button type="reset" class="btn">Cancel</button> <button type="submit" class="btn btn-warning">Update</button>
                                             </div>
                                         </div>
                                     </div>
                                 </div>
                             </td>
                         </tr>
                         <tr id="mitem-{{this.id}}">
                             <td class="id">{{this.id}}</td>
                             <td class="name">
                                 {{this.item_name_english}}
                                 {{#if this.item_name_vietnamese}}<br>({{this.item_name_vietnamese}}){{/if}}
                             </td>
                             <td class="price">{{this.item_price}}</td>
                             <td class="category">{{this.item_category}}</td>
                             <td class="status">{{#if this.isActive}}Enabled{{else}}Disabled{{/if}}</td>
                             <td class="action"><i class="fa fa-edit"></i> <i class="fa fa-trash"></i></td>
                         </tr>
                    {{/each}}
                {{else}}
                        <tr class="no-results">
                            <td colspan="8">
                                <p>There are no items in your menu</p>
                            </td>
                        </tr>
                {{/if}}
                 </tbody>
             </table>
         </div>
     </form>
    </div>
  </div>