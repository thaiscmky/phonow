<div class="edit-mode">
    <fieldset class="card card-body">
        <h2>Add new menu item</h2>
        {{!-- <form id="newitem" action="/api/addmenuitem" method="post"> --}}
        <form id="newitem" >
            <div class="form-group">
                 <label for="item">Menu Type</label>
                <select id="optionMenuType">
                    {{#each menuTypes}}
                    <option value='{{id}}'>{{menu_type_name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                 <label for="item">Category</label>
                <select id="optionMenuCategory">
                    {{#each categories}}
                    <option value='{{id}}'>{{category_name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="item">Name</label>
                <input type="text" class="form-control" id="item_name_english">

            </div>
            <div class="form-group">
                <label for="item">Name(vietnamese)</label>
                <input type="text" class="form-control" id="item_name_vietnamese">

            </div>

            <div class="form-group">
                <label for="item-desc">Description</label>
                <input type="text" class="form-control" id="item_description">

            </div>

            <div class="form-group">
                <label for="item-price">Price</label>
                <input type="text" class="form-control" id="item_price">

            </div>
            <div class="form-group">
                <label for="item-price">Rating</label>
                <input type="text" class="form-control" id="item_rating">

            </div>


            <button id="menuItem-form" type="submit" class="btn btn-warning">Add Item</button>
        </form>
    </fieldset>
</div>