<div class="add-mode col pt-3">
    <fieldset class="card card-body">
    <h2>Add a Subcategory</h2>
        <form id="newcategory">
            <div class="form-group form-row mb-0 pt-2">
                <label for="add_name" class="col">Name
                    <span class="col">
                        <input type="text" class="form-control" name="category_name" id="add_name" required/>
                    </span>
                </label>
                <label for="add_menutype" class="col">Add to category
                    <span class="col">
                        {{assignJSON 'typelist' args.menuTypes.success}}
                        <select class="form-control" id="add_menutype" name="menu_type_id" required>
                            <option value="">Select...</option>
                            {{#each this.typelist}}
                                <option value="{{this.id}}">
                                    {{this.menu_type_name}}
                                </option>
                            {{/each}}
                        </select>
                    </span>
                </label>
            </div>
            <div class="form-group form-row">
                <label for="add_description" class="col">Description</label>
                <textarea class="form-control" class="col" name="category_description" id="add_description" ></textarea>
            </div>
            <div class="form-group form-row">
                    <button type="submit" id="submit_newcategory" class="btn btn-warning">Add Subcategory</button>
            </div>
        </form>
    </fieldset>
</div>