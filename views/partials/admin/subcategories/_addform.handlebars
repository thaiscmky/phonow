<div class="edit-mode">
    <fieldset class="card card-body">
    <h2>Add a Subcategory</h2>
        <form id="newcategory" action="/api/addcategory" method="post">
            <div class="form-group">
                <div class="form-row">
                    <div class="col input-group">
                        <label for="add_name">Name</label>
                        <input type="text" class="form-control" name="add_name" id="add_name" required/>
                    </div>
                    <div class="col input-group">
                        <label for="add_menutype">Add to category</label>
                        {{assignJSON 'typelist' args.menuTypes}}
                        <select class="form-control" id="add_menutype" name="add_menutype" required>
                            <option value="">Select..</option>
                            {{#each this.typelist}}
                                <option value="{{this.id}}">
                                    {{this.name}}
                                </option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group form-row">
                    <div class="col input-group">
                        <label for="add_description">Description</label>
                        <textarea class="form-control" name="add_description" id="add_description" ></textarea>
                    </div>
            </div>
            <div class="form-group form-row actions">
                <div class="col input-group">
                    <button type="submit" id="submit_newcategory" class="btn btn-warning">Add Subcategory</button>
                </div>
            </div>
        </form>
    </fieldset>
</div>
