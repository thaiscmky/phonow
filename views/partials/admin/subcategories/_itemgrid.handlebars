 <div class="row my-4 mx-0 grid" id="category-items">
     <div class="col">
     {{!-- <form id="editcategories" action="/admin/subcategories" method="get"> --}}
         <div class="table-responsive">
             <table class="table table-striped">
                 <thead class="thead-inverse">
                     <tr>
                         <th>#ID</th>
                         <th>Name</th>
                         {{!-- <th>In Category</th> --}}
                         <th>Description</th>
                         <th>Status</th>
                         <th>Action</th>
                     </tr>
                 </thead>
                 <tbody>
                 {{#if settings}}
                 
                    {{#each settings}}

                         <tr class="edit-mode-category" id="edit-category-{{this.id}}">
                             <td class="id">
                                 <p>{{this.id}}</p>
                                 <input class="category_id" name="category_id" type="hidden" value="{{this.id}}" >
                             </td>
                             <td class="name">
                                 <input type="text" class="form-control" name="category_name-{{this.id}}" id="category_name-{{this.id}}" value="{{this.category_name}}"/>
                             </td>
                             <td class="description">
                                <textarea class="form-control" name="category_description-" id="category_description-{{this.id}}">{{this.category_description}}</textarea>
                             </td>
                             <td class="form-check input-group status">
                                  <div class="col input-group status my-2">
                                     <label class="form-check-label switch">
                                         <input class="form-check-input" type="checkbox" value="{{this.isActive}}" id="status-" name="status-{{this.id}}" {{#if this.isActive}}checked{{/if}}>
                                         <span class="slider"></span>
                                     </label>
                                 </div>
                             </td>
                             <td class="action">
                                 <button type="reset" class="btn" id="cancel-category-{{this.id}}" name="cancel-category-{{this.id}}">Cancel</button>
                                 <button class="btn btn-warning" value="{{this.id}}" id="update-category-{{this.id}}"  name="update-category-{{this.id}}">Update</button>
                             </td>
                         </tr>
                         <tr id="category-{{this.id}}">
                             <td class="id">{{this.id}}</td>
                             <td class="name">{{this.category_name}}</td>
                             {{!-- <td class="category">{{this.category_menutype}}</td> --}}
                             <td class="description">{{this.category_description}}</td>
                             <td class="status">{{#if this.isActive}}Enabled{{else}}Disabled{{/if}}</td>
                             <td class="action"><button class="fa fa-edit" value="{{this.id}}"></button> <button class="fa fa-trash" value="{{this.id}}"></button></td>
                         </tr>
                    {{/each}}
                    {{else}}
                    <tr class="no-results">
                        <td colspan="7">
                            <p>There are no categories in your menu</p>
                        </td>
                    </tr>
                    {{/if}}
                 </tbody>
             </table>
         </div>
     {{!-- </form> --}}
     </div>
  </div>