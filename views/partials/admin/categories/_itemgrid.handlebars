 <div class="row my-4 mx-0 grid" id="category-items">
     <div class="col">
         <div class="table-responsive">
             <table class="table table-striped">
                 <thead class="thead-inverse">
                     <tr>
                         <th>#ID</th>
                         <th>Name</th>
                         <th>Description</th>
                         <th>Status</th>
                         <th>Action</th>
                     </tr>
                 </thead>
                 <tbody>
                 {{#if args.list.success}}
                    {{#each args.list.success}}
                         <tr class="edit-mode" id="edit-menutype-{{this.id}}">
                             <td colspan="5">
                                 <form id="editmenutypes" method="post">
                                     <div class="form-row">
                                         <div class="id">
                                             <p>{{this.id}}</p>
                                             <input id="menutype_id" name="menutype_id" type="hidden" value="{{this.id}}" required>
                                         </div>
                                         <div class="col-3 name">
                                             <input type="text" class="form-control" name="menutype_name-{{this.id}}" id="menutype_name-{{this.id}}" value="{{this.menu_type_name}}" required />
                                         </div>
                                         <div class="col description">
                                             <textarea class="form-control" name="menutype_description-" id="menutype_description-{{this.id}}">{{this.menu_type_description}}</textarea>
                                         </div>
                                         <div class="col input-group">
                                             <div class="row">
                                                 <div class="col-3 status my-2">
                                                     <label class="form-check-label switch">
                                                         <input class="form-check-input" type="checkbox" value="{{this.isActive}}" id="status-" name="status-{{this.id}}" {{#if this.isActive}}checked{{/if}}>
                                                         <span class="slider"></span>
                                                     </label>
                                                 </div>
                                                 <div class="col d-flex align-items-end justify-content-end">
                                                     <div class="row action">
                                                         <div class="col">
                                                             <button type="reset" id="cancel-menutype-{{this.id}}" class="btn">Cancel</button>
                                                         </div>
                                                         <div class="col">
                                                             <button type="submit" class="btn btn-warning">Update</button>
                                                         </div>
                                                     </div>
                                                 </div>
                                             </div>
                                         </div>
                                     </div>
                                 </form>
                             </td>
                         </tr>
                         <tr id="menutype-{{this.id}}">
                             <td class="id">{{this.id}}</td>
                             <td class="name">{{this.menu_type_name}}</td>
                             <td class="description">{{this.menu_type_description}}</td>
                             <td class="status">{{#if this.isActive}}Enabled{{else}}Disabled{{/if}}</td>
                             <td class="action"><i class="fa fa-edit"></i> <i class="fa fa-trash"></i></td>
                         </tr>
                    {{/each}}
                    {{else}}
                    <tr class="no-results">
                        <td colspan="7">
                            <p>There are no categories in your menu{{args.list.error}}</p>
                        </td>
                    </tr>
                    {{/if}}
                 </tbody>
             </table>
         </div>
     </form>
     </div>
  </div>